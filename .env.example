# Author Cartoon Generator Configuration Template
# Copy this file to .env and fill in your API keys

# Replicate API (REQUIRED)
# Get yours at: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_token_here

# Google Custom Search API (REQUIRED for image search)
# Get yours at: https://developers.google.com/custom-search/v1/introduction
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=c61a15b4098d74d98

# Optional: OpenAI API (for fallback - not used by default)
OPENAI_API_KEY=your_openai_key_here

# Image Processing Settings
MAX_IMAGE_SIZE=2048
MIN_IMAGE_SIZE=300
FACE_CONFIDENCE_THRESHOLD=0.7

# Search Settings  
MAX_SEARCH_RESULTS=10
ENABLE_WEB_SEARCH=true

# Network Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Background Removal Settings
ENABLE_BACKGROUND_REMOVAL=false
BACKGROUND_REMOVAL_TOLERANCE=30
BACKGROUND_REMOVAL_EDGE_SMOOTHING=true

# Debug Settings
DEBUG=false